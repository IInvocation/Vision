@using System.Runtime.InteropServices.ComTypes
@using FluiTec.Vision.Server.Host.AspCoreHost.Models.IdentityViewModels
@using Microsoft.AspNetCore.Mvc.Localization
@model ScopeViewModel
@inject IViewLocalizer Localizer

@if (Model.Checked)
{
	if (Model.Required)
	 {
		 <input id="scopes_@Model.Name" name="ScopesConsented" type="checkbox" value="@Model.Name" checked disabled/>
	 }
	 else
	 {
		 <input id="scopes_@Model.Name" name="ScopesConsented" type="checkbox" value="@Model.Name" checked />
	 }
}
else
{
	<input id="scopes_@Model.Name" name="ScopesConsented" value="@Model.Name" type="checkbox" />
}

<label for="scopes_@Model.Name">@Localizer[Model.DisplayName]</label>
@if (Model.Required)
{
	<localize>RequiredText</localize>
}
@if (Model.Description != null)
{
	<label for="scopes_@Model.Name">@Localizer[Model.Description]</label>
}
@if (Model.Required)
{
	<input type="hidden" name="ScopesConsented" value="@Model.Name" />
}