@using Microsoft.AspNetCore.Mvc.Localization
@model IndexViewModel
@inject IViewLocalizer Localizer
<header class="major">
	<h2><localize>ManageHeader</localize></h2>
	<p><localize>IndexHeader</localize></p>
</header>
<div class="container">
	<section id="content">
		<section>
			<h4><localize>ChangeSettingsHeader</localize></h4>
			<hr />
			<h5><localize>PasswordHeader</localize></h5>
			<div class="row uniform">
				<ul class="actions">
					<li>
						@if (Model.HasPassword)
						{
							<a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed"><localize>ChangePasswordHeader</localize></a>
						}
						else
						{
							<a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed"><localize>CreatePasswordHeader</localize></a>
						}
					</li>
				</ul>
			</div>
			<h5><localize>ExternalLoginsHeader</localize></h5>
			<div class="row uniform">
				<ul class="actions">
					<li>
						@(Model.Logins.Count > 0 ? Localizer["ExternalLoginsCounterText", Model.Logins.Count] : Localizer[name: "NoExternalLoginsText"])
					</li>
					<li>
						<a asp-controller="Manage" asp-action="ManageLogins" class="btn-bracketed"><localize>ManageExternalLoginsHeader</localize></a>
					</li>
				</ul>
			</div>
			@*<h5><localize>PhoneNumberHeader</localize></h5>
			<div class="row uniform">
				<ul class="actions">
					@if (Model.PhoneNumber == null)
					{
						@Localizer[name: "NoPhoneNumberText"]
					}
