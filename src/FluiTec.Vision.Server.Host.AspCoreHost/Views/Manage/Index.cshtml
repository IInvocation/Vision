						@Model.PhoneNumber
					}
					@if (Model.PhoneNumber != null)
					{
						<li><a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed"><localize>ChangePhoneNumberHeader</localize></a></li>
						<li>
							<form asp-controller="Manage" asp-action="RemovePhoneNumber" method="post">
								<input type="submit" value="@Localizer[name: "RemovePhoneNumberHeader"]" />
							</form>
						</li>
					}
					else
					{
						<li><a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed"><localize>AddPhoneNumberHeader</localize></a></li>
					}
				</ul>
			</div>*@
