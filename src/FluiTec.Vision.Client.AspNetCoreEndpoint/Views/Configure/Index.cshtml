@model RegistrationStatusModel
@using FluiTec.Vision.Client.AspNetCoreEndpoint.Models.ConfigureViewModels
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<header class="major">
	<h2><localize>ConfigureHeader</localize></h2>
	<p><localize>IndexHeader</localize></p>
</header>
<div class="container">
	<section id="content">
		<section>
			<table class="table">
				<tr>
					<td class="pull-left"><b><localize>ClientRegistrationHeader</localize></b></td>
					<td class="pull-left"><localize>ClientRegistrationText</localize></td>
					@if (Model.Registered)
					{
						<td><a style="border-bottom: none" asp-controller="Configure" asp-action="ConfigureClientRegistration"><img src="images/status/status_globe_ok.png" width="64" height="64" alt="@Localizer[name: "ClientRegistrationStatusOkText"]"/></a></td>
					}
					else
					{
						<td><a style="border-bottom: none" asp-controller="Configure" asp-action="ConfigureClientRegistration"><img src="images/status/status_globe_error.png" width="64" height="64" alt="@Localizer[name: "ClientRegistrationStatusErrorText"]" /></a></td>
					}
				</tr>
			</table>
		</section>
	</section>
</div>